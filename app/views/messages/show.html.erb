<div class="container">
    <div class="row">
        <div class="col-xs-6">
            <h2><%= @profile.account_name %>とのメッセージ</h2>

            <table class="message">
              <thead>
                <tr>
                  <th style="text-align: left; font-size: 20px;"><%= current_user.user_detail.account_name %></th>
                  <th style="text-align: right; font-size: 20px;"><%= @profile.account_name %></th>
                </tr>
              </thead>
              <% @messages.each do |message| %>
                <% unless message.user_id == current_user.id %>
                <tbody>
                  <tr>
                    <th>
                      <div class="post_message">
                        <%= image_tag @profile.profile_picture.middle.url %>
                        <%= @profile.account_name %>
                        <p style="text-align: left;"><%= message.message %></p>
                      </div>
                    </th>
                    <th></th>
                  </tr>
                <% else %>
                  <tr>
                    <th></th>
                    <th>
                      <div class="post_message">
                        <%= image_tag current_user.user_detail.profile_picture.middle.url %>
                        <%= current_user.user_detail.account_name %>
                        <p style="text-align: right;"><%= message.message %></p>
                      </div>
                    </th>
                  </tr>
                </tbody>
                <% end %>
              <% end %>
            </table>

            <%= form_with model: @message, remote: true do |f| %>
              <%= f.text_field :message %>
              <%= f.hidden_field :chat_room_id %>
              <%= f.submit "送信", class:"btn btn-sm btn-success message-btn" %>
            <% end %>
        </div>
    </div>
</div>
