<% if @recruitment.errors.any? %>
  <div class="container main-contents">
    <div class="row">
      <div class="col-lg-1">
      </div>
      <div class="col-lg-10">
        <div id="error_explanation">
          <ul>
            <% @recruitment.errors.full_messages.each do |msg| %>
              <li class="alert alert-danger"><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-lg-1">
      </div>
    </div>
  </div>
<% end %>
<div class="container main-contents">
  <div class="row">
    <div class="col-lg-1">
    </div>
    <div class="col-lg-10 contents">
      <%= form_with(model: @recruitment, local: true) do |form| %>
        <div class="form_box">
          <%= form.label :title, t("recruitments.form.title"), class: "content_field form-label" %>
          <% if params[:locale] == "ja" %>
            <%= form.text_field :title, id: 'recruitment_title', placeholder: "タイトルを入力してください。", class: "form-control" %>
          <% else %>
            <%= form.text_field :title, id: 'recruitment_title', placeholder: "Please enter a title.", class: "form-control" %>
          <% end %>
        </div>
        <div class="form_box">
          <%= form.label :content, t("recruitments.form.recruitment_content"), class: "content_field form-label" %></p>
          <% if params[:locale] == "ja" %>
            <%= form.text_area :content, size: "30x20", id: 'recruitment_content', placeholder: "募集する内容を入力してください。", class: "form-control overflow-auto" %>
          <% else %>
            <%= form.text_area :content, size: "30x20", id: 'recruitment_content', placeholder: "Please enter the content you want to recruit.", class: "form-control overflow-auto" %>
          <% end %>
        </div>
        <div class="form_box basic-button">
          <% if params[:locale] == "ja" %>
            <%= form.submit '登録する', id: '登録する', class: "btn btn-success btn-lg w-20" %>
          <% else %>
            <%= form.submit 'Register', id: '登録する', class: "btn btn-success btn-lg w-20" %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-lg-1 ">
    </div>
  </div>
</div>
