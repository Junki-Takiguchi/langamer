<div class="main-image">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <p id="logo">Langamer</p>
        <div id="explanation">
          <strong><p id ="explanation-title"><%= t("devise/sessions.new.langamer_1") %></p></strong>
          <em><%= t("devise/sessions.new.langamer_2") %><br />
          <%= t("devise/sessions.new.langamer_3") %><br />
          <%= t("devise/sessions.new.langamer_4") %></em>
        </div>
      </div>
      <div class="col-md-2">
      </div>
      <div class="col-md-3 signup-form border contents">
        <h2 class="text-center"><%= t("devise/sessions.new.sign_in") %></h2>
        <% if notice.present? %>
          <p class="notice"><%= notice %></p>
        <% end %>
        <% if alert.present? %>
          <p class="alert"><%= alert %></p>
        <% end %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, t("devise/sessions.new.email"), class: "form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label :password, t("devise/sessions.new.password"), class: "form-label" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, t("devise/sessions.new.automatically_login_next_time"), class: "form-check-label" %>
            </div>
          <% end %>
          <div class="actions">
            <% if params[:locale] == "ja" %>
              <%= f.submit "#{t("devise/sessions.new.sign_in")}", class: "btn btn-primary btn-lg" %>
            <% else %>
              <%= f.submit "#{t("devise/sessions.new.sign_in")}", class: "btn btn-primary btn-lg" %>
            <% end %>
          </div>
        <% end %>
        <br />
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.hidden_field :email, value: 'test01@gmail.com' %>
            <%= f.hidden_field :password, value: 'test01' %>
          </div>
          <div class="actions">
            <% if params[:locale] == "ja" %>
              <%= f.submit "ゲストログイン", class: "btn btn-secondary guest-login" %>
            <% else %>
              <%= f.submit "Guest sign in", class: "btn btn-secondary guest-login" %>
            <% end %>
          </div>
        <% end %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.hidden_field :email, value: 'admin01@gmail.com' %>
            <%= f.hidden_field :password, value: 'admin01' %>
          <div class="actions">
            <% if params[:locale] == "ja" %>
              <%= f.submit "ゲストログイン(admin)", class: "btn btn-secondary guest-login" %>
            <% else %>
              <%= f.submit "Guest sign in(admin)", class: "btn btn-secondary guest-login" %>
            <% end %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
