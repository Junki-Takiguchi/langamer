<%- if controller_name != 'sessions' %>
  <% if params[:locale] == "ja" %>
    <%= link_to "ログイン", new_session_path(resource_name), class: "text-info" %><br />
  <% else %>
    <%= link_to "Sign in", new_session_path(resource_name), class: "text-info" %><br />
  <% end %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <% if params[:locale] == "ja" %>
    <%= link_to "新規登録", new_registration_path(resource_name), class: "text-info" %><br />
  <% else %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-info" %><br />
  <% end %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <% if params[:locale] == "ja" %>
    <%= link_to "パスワードを忘れましたか？", new_password_path(resource_name), class: "text-info" %><br />
  <% else %>
    <%= link_to "Did you forget your password?", new_password_path(resource_name), class: "text-info" %><br />
  <% end %>
<% end %>

